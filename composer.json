{
    "name": "mozillal10n/bugzilla",
    "description": "Functions used to query Bugzilla in l10n tools",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/mozilla-l10n/phpclass-cache",
            "no-api": true
        }
    ],
    "require": {
        "mozillal10n/cache": "0.*"
    },
    "require-dev": {
        "atoum/atoum" : "~3.4",
        "friendsofphp/php-cs-fixer": "~2.16"
    },
    "autoload": {
        "psr-4": {
            "Bugzilla\\": "src/Bugzilla/"
        }
    }
}
